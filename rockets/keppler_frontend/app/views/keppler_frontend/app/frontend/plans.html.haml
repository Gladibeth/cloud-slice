!!!
%html
  %header
    = render 'app/layouts/head'
    %link{ rel: 'stylesheet', href: 'https://cdn.linearicons.com/free/1.0.0/icon-font.min.css' }
    %link{ rel: 'stylesheet', href: 'https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.4.1/css/simple-line-icons.css' }
  %body
    %section.login-cloud
      .content-back
        // = image_tag '/assets/app/vectores_services'
      %div
        .content-logo
          .content-fix
            = image_tag '/assets/app/menu_fix_logo'
          %div.container-fluid
            .content-card-plan
              
              - @plans.each_with_index do |plan|
                #style-1.project-cloud.scrollbar.one-m
                  %p.title-card
                    %strong= plan.name
                  .plans-g#sortable
                    - plan.accounts.each_with_index do |account, index|
                      %a.card-project{"data-target" => "#plans-#{account.plan_id}-#{index}", "data-toggle" => "modal"}
                        %p
                          %strong 
                            Cuenta: 
                          = account.name
                        %p 
                          %strong 
                            Fecha: 
                          = account.date.strftime('%d/%m/%Y')
                        %p 
                          %strong Plan:
                          = account&.plan&.name || 'SIN PLAN ASIGNADO'
                        %p 
                          %strong servidor:
                          = account&.servidor || 'SIN SERVIDOR ASIGNADO'
                        %p 
                          %strong DescripciÃ³n:
                        #{account&.plan&.description}
                        %p
                          %strong 
                            Renovado: 
                          = account.renovate? ? 'SI' : 'NO'
    - @plans.each_with_index do |plan|                 
      - plan.accounts.each_with_index do |account, index|                
        .modal.fade{ :id => "plans-#{account.plan_id}-#{index}","aria-hidden" => "true", "aria-labelledby" => "", :role => "dialog", :tabindex => "-1"}
          .modal-dialog.modal-lg
            .modal-content
              .modal-header
                %h4#myModalLabel.modal-title= account.name
                %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
                  %span{"aria-hidden" => "true"} Ã—
              .modal-body
                %p
                  %strong 
                    Cuenta: 
                  = account.name
                %p 
                  %strong 
                    Fecha: 
                  = account.date.strftime('%d/%m/%Y')
                %p 
                  %strong Plan:
                  = account&.plan&.name || 'Sin plan asociado'.upcase
                %p 
                  %strong DescripciÃ³n:
                #{account&.plan&.description}
                %p
                %strong 
                  Renovado: 
                = account.renovate? ? 'SI' : 'NO'
                = simple_form_for account, url: app_set_plan_path(account), method: :post do |f|
                  = f.input :renovate
                  = f.submit 'ACTUALIZAR'
              -# .modal-footer
              -#   %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
              -#   %button.btn.btn-primary{:type => "submit"} Save changes